extends ../../layout

block content
    .panel.panel-default
        .panel-body

            h2 Delete user from :  #{channel.name}
            h3 The user will Kicked.
            form(action="/channel/admin/kick-user/" + channel.permalink , method="POST").form-horizontal
                .form-group
                    label(for='tokick') Select Admin:
                    select(name='tokick' data-style='btn-primary')#tokick.form-control
                        each authorizedMember in channel.authorizedMembers
                            option(value=authorizedMember.id)  #{authorizedMember.username}
                    button(class='btn btn-lg btn-primary btn-block', type='submit') Send
