extends ../../layout

block content
    .panel.panel-default
        .panel-body

            h2 Ban user from :  #{channel.name}
            h3 The user will be banned .
            form(action="/channel/admin/ban-user/" + channel.permalink , method="POST").form-horizontal
                .form-group
                    label(for='toban') Select Admin:
                    select(name='toban' data-style='btn-primary')#toban.form-control
                        each authorizedMember in channel.authorizedMembers
                            option(value=authorizedMember.id)  #{authorizedMember.username}
                    button(class='btn btn-lg btn-primary btn-block', type='submit') Send
